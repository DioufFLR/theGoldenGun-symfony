{% extends 'base.html.twig' %}

{% block body %}
    <section class="md:h-full flex items-center text-gray-600 bg-gray-200">
        <div class="container px-5 py-24 mx-auto">
            <div class="text-center mb-12">
                <h5 class="text-base md:text-lg text-rose-500 mb-1">See Our Recent</h5>
                <h1 class="text-4xl md:text-6xl text-gray-700 font-semibold">{{ category.categoryName }}</h1>
            </div>
            {% for product in category.products %}
                <div class="flex flex-wrap -m-4 justify-around">
                    <div class="p-4 sm:w-1/2 lg:w-1/3">
                        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
                            <img src="{{ absolute_url(asset(''~ product.productImage )) }}" alt="produit"
                                 class="lg:h-72 md:h-48 w-full object-cover object-center">
                            <div class="p-6 hover:bg-rose-500 hover:text-white transition duration-300 ease-in">

                                <h1 class="text-2xl font-semibold mb-3">{{ product.productLabel }}</h1>
                                <p class="leading-relaxed mb-3">{{ product.productDescription }}</p>
                                <h2 class="text-base font-medium text-rose-500 mb-1">{{ product.productPrice }}â‚¬</h2>
                                <div class="flex items-center flex-wrap">
                                    <a class="text-indigo-800 font-semibold inline-flex items-center md:mb-2 lg:mb-0 "
                                       href="/detail/{{ product.id }}">Voir
                                        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor"
                                             stroke-width="2" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M5 12h14"></path>
                                            <path d="M12 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}