{% extends 'base.html.twig' %}

{% block title %}Mon Panier - TheGoldenGun{% endblock %}

{% block body %}
    <h1>Mon Panier</h1>

    <table>
        <tr>
            <th>Produit</th>
            <th>Quantit√©</th>
            <th>Prix unitaire</th>
            <th>Total</th>
        </tr>

        {% for cartItem in cart.cartItems %}
            <tr>
                <td>{{ cartItem.product.productLabel }}</td>
                <td>{{ cartItem.quantity }}</td>
                <td>{{ cartItem.product.productPrice }}</td>
                <td>{{ cartItem.product.productPrice * cartItem.quantity }}</td>
            </tr>
        {% endfor %}
    </table>

    <p><strong> Total du Panier : {{ total }} </strong></p>
{% endblock %}
