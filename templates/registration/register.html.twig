{% extends 'base.html.twig' %}

{% block title %}Inscription - TheGoldenGun{% endblock %}

{% block body %}

    <section class="bg-gray-50 dark:bg-gray-900">
        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm) }}
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Création de votre <span class="text-rose-500 font-bold">compte</span>
                    </h1>
                    <form class="space-y-4 md:space-y-6">
                        <div>
                            <label for="email"
                                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                {{ form_row(registrationForm.email) }}
                            </label>
                        </div>
                        <div>
                            <label for="userName"
                                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                {{ form_row(registrationForm.userName, {
                                    label: 'Nom et Prénom'
                                }) }}
                            </label>
                        </div>
                        <div>
                            <label for="address"
                                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                {{ form_row(registrationForm.userAddress, {
                                    label: 'Adresse'
                                }) }}
                            </label>
                            <label for="type"
                                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                {{ form_row(registrationForm.userType, {
                                    label: 'Client Pro'
                                }) }}
                            </label>
                        </div>
                        <div>
                            <label for="password"
                                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">{{ form_row(registrationForm.plainPassword, {
                                    label: 'Mot de passe'
                                }) }}
                            </label>
                        </div>
                        <div class="flex flex-wrap">
                            <div class="ml-3 text-sm">
                                <label for="terms" class="font-light text-gray-500 dark:text-gray-300">
                                    {{ form_row(registrationForm.RGPDConsent, {
                                        'label': false
                                    }) }}
                                    J'accepte les <a
                                            class="font-medium text-primary-600 hover:underline dark:text-rose-500"
                                            href="#">Termes et Conditions </a>
                                </label>
                            </div>
                        </div>
                        {{ form_row(registrationForm._token) }} {#  insérer ceci ici #}

                        <button type="submit"
                                class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 w-full text-white bg-primary-600 hover:bg-rose-500 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            S'enregistrer
                        </button>
                        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                            Vous avez déjà un compte ? <a href="{{ path('app_login') }}"
                                                          class="font-medium text-rose-500 hover:underline dark:text-primary-500">Connectez
                                vous</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </section>
{% endblock %}
