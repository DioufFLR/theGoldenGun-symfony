{% extends 'base.html.twig' %}

{% block body %}
    <section class="md:h-full flex items-center text-gray-600 bg-gray-100">
        <div class="container px-5 py-24 mx-auto">
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-6xl text-gray-700 font-semibold">Toutes les <span class="text-rose-400 font-bold">armes</span></h1>
            </div>
            <div class="flex flex-wrap -m-4 justify-around">
                {% for product in product %}
                    <div class="p-4 sm:w-1/2 lg:w-1/3">
                        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden bg-white">
                            <img src="{{ absolute_url(asset('assets/img/'~ product.productImage )) }}" alt="produit"
                                 class="lg:h-72 md:h-48 w-full object-cover object-center transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300">
                            <div class="p-6 hover:bg-rose-500 hover:text-white transition duration-300 ease-in transform">

                                <h1 class="text-2xl font-semibold mb-3">{{ product.productLabel }}</h1>
                                <p class="leading-relaxed mb-3">{{ product.productDescription }}</p>
                                <h2 class="font-bold mb-1">{{ product.productPrice }}â‚¬</h2>
                                <div class="flex items-center flex-wrap">
                                    <a class="text-rose-400 font-semibold inline-flex items-center md:mb-2 lg:mb-0 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 "
                                       href="{{ path('app_detail', {'product': {{ product.id }}}) }}">Voir
                                        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor"
                                             stroke-width="2" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M5 12h14"></path>
                                            <path d="M12 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}